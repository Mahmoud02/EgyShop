@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_TemplateLayout";
}
@section CssScripts{
    <link href="~/css/login.css" rel="stylesheet" />

}
<div class="container p-5 ">
    <div class="row flex-row-reverse">
        <div class="col-md-5 shadow-lg bg-white rounded p-5" style="text-align: right;">
            <h2>  تسجيل الدخول </h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Input.Email"> </label>
                    <input asp-for="Input.Email" type="email" class="form-control">
                    <small class="form-text text-muted">لن يتم مشاركة البريد الإلكتروني الخاص بك مع احد</small>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" type="password" class="form-control">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" >
                    <label asp-for="Input.RememberMe" class="form-check-label" style="margin-right: 20px;" for="exampleCheck1">  @Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                   
                </div>
                <button type="submit">تسجيل الدخول</button>
                <a asp-page="./ForgotPassword">نسيت كلمة المرور؟</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">تسجيل الأشتراك فى الموقع</a>
            </form>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="col-md-7" style="text-align: center;">
            <h1>EgyShop</h1>
            <p>  اعرض منجاتك اونلاين عن طريق المنصه الخاصه بنا وتمتع بالعديد من المزايا والعروض</p>
            <img src="~/images/loginImage.jpg" style="width: 90%;" />
        </div>
    </div>

</div>
@section JsScripts{
    <partial name="_ValidationScriptsPartial" />
}
