@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "_TemplateLayout";

}

@section CssScripts{
    <link href="~/css/login.css" rel="stylesheet" />

}
<div class="container p-5 ">
    <div class="row flex-row-reverse">
        <div class="col-md-5 shadow-lg bg-white rounded p-5" style="text-align: right;">
            <h2>تغيير كلمه المرو</h2>
            <form method="post">
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group">
                    <label asp-for="Input.Email">البريد الالكترونى</label>
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="البريد الألكترونى">
                    <small class="form-text text-muted">لن يتم مشاركه الأيميل الخاص بك مع احد</small>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">كلمه السر</label>
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="كلمه السرى">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">كلمه السر مره اخرى</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="كلمه السر مره اخرى">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit">تأكيد</button>
            </form>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="col-md-7" style="text-align: center;">
            <h1>EgyShop</h1>
            <p>  اعرض منجاتك اونلاين عن طريق المنصه الخاصه بنا وتمتع بالعديد من المزايا والعروض</p>
            <img src="~/images/loginImage.jpg" style="width: 90%;" />
        </div>
    </div>

</div>
@section JsScripts{
    <partial name="_ValidationScriptsPartial" />
}



