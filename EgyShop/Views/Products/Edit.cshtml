@model EgyShop.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-12 product-container shadow-lg bg-white rounded p-5" style="text-align: right;">
    <h2> تعديل المنتج </h2>
    <form enctype="multipart/form-data" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="PreviousPhotoLink" />
        <div class="form-group col-md-8">
            <label asp-for="Name"> </label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-md-8 ">
            <label asp-for="Description"> </label>
            <textarea asp-for="Description" rows="10" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="form-group col-md-4">
            <label asp-for="PhotoLink"> </label>
            <input asp-for="PhotoLink" class="form-control" id="exampleInputPassword1">
            <span asp-validation-for="PhotoLink" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Price"> </label>
            <input asp-for="Price" class="form-control" id="exampleInputPassword1">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-check col-md-8">
            <input asp-for="FeatureProduct" type="checkbox">
            <label asp-for="FeatureProduct" style="margin-right: 5px;"></label>
            <span asp-validation-for="FeatureProduct" class="text-danger"></span>

        </div>
        <div class="form-check col-md-8">
            <input asp-for="RecommendProduct" type="checkbox">
            <label asp-for="RecommendProduct" style="margin-right: 5px;"></label>
            <span asp-validation-for="RecommendProduct" class="text-danger"></span>

        </div>
        <div class="form-group col-md-4">
            <label asp-for="CategoryId"> </label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <button type="submit">حفظ التعديلات</button>

    </form>
</div>
