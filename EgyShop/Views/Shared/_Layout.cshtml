@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link rel="icon" type="image/png" href="~/favicon.ico" sizes="32x32" asp-append-version="true">
    <title>@ViewData["Title"] - Shopye</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/dashboard/css/paper-dashboard.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/templates/template-v2/css/font-awesome.css" rel="stylesheet" />
    <script data-ad-client="ca-pub-1482569630448984" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <style type="text/css">

        @@import url(https://fonts.googleapis.com/earlyaccess/amiri.css);



        body {
            font-family: 'Amiri', serif;
        }

        #sidebar-wrapper {
            text-align: center;
            overflow: hidden;
        }

        #p {
            font-weight: bold;
            font-size: 1.4rem;
        }

        .row .description {
            margin-bottom: 10px;
            font-size: 3em;
        }

        .row p {
            font-size: 1.5em;
            font-weight: bold;
        }

            .row p a {
                color: #28a745;
            }

        .content {
            text-align: right;
            direction: rtl;
        }

        .table {
            text-align: center;
        }

            .table > thead > tr > th {
                font-size: 17px;
            }

            .table > tbody > tr {
                font-size: 17px;
            }

        .dropdown-menu {
            text-align: right;
            margin-top: 0px;
        }

            .dropdown-menu a {
                transition: transform .5s ease;
            }

                .dropdown-menu a:hover {
                    background-color: black !important;
                    color: white;
                }

        .add-product p {
            font-size: 30px;
            line-height: 1;
            text-align: right;
            padding-right: 20px;
        }

        .product-container button {
            background-color: #1f2328;
            color: #fff;
            background-image: linear-gradient(45deg, #16191d, #23282e);
            box-shadow: 0 1px 2px 0 rgb(0 0 0 / 15%), 0 0 0 1px rgb(0 0 0 / 10%) inset;
            width: 30%;
            min-width: 144px;
            padding: 11px 16px;
            border-radius: 6px;
            font-size: 20px;
            line-height: 1.45;
            border: 0 solid transparent;
            margin-top: 10px;
        }

        input[type=radio], input[type=checkbox] {
            opacity: 1 !important;
            position: inherit !important;
            visibility: visible !important;
        }

        .form-group input[type=file] {
            opacity: 1;
            position: inherit
        }

        .dashboard-notes li {
            direction: rtl;
            font-size: 1.2rem;
            margin-bottom: 6px;
        }

        .icon-section .col-md-3 {
            padding-top: 20px;
        }

        .icon-section img {
            border: 1px solid;
            height: 150px;
            width: 150px;
            margin-bottom: 20px;
            transition: transform .5s ease;
            border: 0px;
        }

            .icon-section img:hover {
                transform: scale(1.2);
            }

        label {
            font-size: 1.3rem;
        }
    </style>
</head>
<body>
    <div class="wrapper ">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <div class="logo">
              
                <a  class="simple-text logo-normal">

                    <div class="logo-image-big" style="text-align: center;">
                        <img src="~/dashboard/images/ShopIcon.png" style="height: 110px;" alt="shopIcon" asp-append-version="true"/>
                        <span style="color: black;display: block;font-weight: bolder;margin-top: 10px;line-height: normal;">
                            <span style="color: springgreen">Sho</span>pye
                        </span>

                    </div>
                </a>


            </div>
            <div class="sidebar-wrapper" id="sidebar-wrapper">
                <ul class="nav">
                    <li>
                        <a asp-controller="Store" asp-action="Index">
                            <i></i>
                            <p id="p">معلومات</p>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a asp-controller="categories" asp-action="Index">
                            <i></i>
                            <p id="p">الأقسام</p>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a asp-controller="Products" asp-action="Index">
                            <i></i>
                            <p id="p">المنتجات</p>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a asp-controller="StoreThemeSettings" asp-action="Edit" target="_blank">
                            <i></i>
                            <p id="p">تعديل التصميم </p>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a asp-controller="Store" asp-action="Edit">
                            <i></i>
                            <p id="p">تعديل بيانات المتجر</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel" style="height: 100vh;">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <!--<a class="navbar-brand">Title</a>-->
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <p>Hi,@User.Identity.Name </p>
                        <ul class="navbar-nav">
                            <li class="nav-item btn-rotate dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <p>
                                        <span class="d-lg-none d-md-block"></span>
                                    </p>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">إعدادت الحساب</a>
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="nav-link btn btn-link text-dark">تسجيل الخروج</button>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content" style="background-color: #f4f3ef;">
                <div class="row">

                    @RenderBody()

                </div>
            </div>
            <footer class="footer" bottom: 0; width: -webkit-fill-available;">
                <div class="container-fluid">
                    <div class="row">
                        <!-- <nav class="footer-nav">
                                 <ul>
                                     <li><a href="https://www.creative-tim.com" target="_blank">Creative Tim</a></li>

                                 </ul>
                             </nav>-->
                        <div class="credits ml-auto">
                            <span class="copyright">
                                © 2021, made with <i class="fa fa-heart heart" style="color:red"></i> by Shopye Team
                            </span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/dashboard/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>