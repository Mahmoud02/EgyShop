@model EgyShop.Models.Category

@{
    ViewData["Title"] = "Create";
}

<div class="col-md-12 product-container shadow-lg bg-white rounded p-5" style="text-align: right;">
    <h2>اضافه قسم جديد</h2>
    <form  asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="StoreId" value="@TempData["storeId"]" />
        <div class="form-group col-md-8">
            <label asp-for="Name"> </label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-md-8 ">
            <label asp-for="Description"> </label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <button type="submit">أضافه</button>

    </form>
</div>

